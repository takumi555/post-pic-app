.container
  = image_tag 'Rectangle.png', class: 'top-image'
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :Email, class: 'form-text'
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: "form"
    .field
      = f.label :Account, class: 'form-text'
      %br/
      = f.text_field :username, class: "form"
    .field
      = f.label :Password, class: 'form-text'
      - if @minimum_password_length
        %em
          //(#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: "form"
    .field
      = f.label :password_confirmation, class: 'form-text'
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: "form"
    .actions
      = f.submit "CREATE ACCOUNT", class: 'submit-btn'
  
