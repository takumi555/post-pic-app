!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title PostPicApp
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}/
  %body
    .wrapper
      %p.notice= notice
      %p.alert= alert
      = yield

      %footer
        .footer-container
          = link_to image_tag('ホーム.png'), root_path , class: 'footer-icon'
          = link_to image_tag('星.png'), timelinelike_path , class: 'footer-icon'
          = link_to image_tag('プラス.png'), new_post_path , class: 'footer-icon'
          = link_to image_tag('人物.png'), profile_path, class: 'footer-icon'
          = link_to image_tag('ログアウト'), destroy_user_session_path, data: {method: 'DELETE'}, class: 'footer-icon'
          

